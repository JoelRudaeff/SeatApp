<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose the vehicle:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Train_button"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginTop="47dp"
        android:onClick="startTrains"
        android:text="Trains"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Bus_button"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginTop="47dp"
        android:onClick="startBuses"
        android:text="Buses"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Train_button"
        android:layout_alignStart="@+id/Train_button"
        android:layout_alignRight="@+id/Train_button"
        android:layout_alignEnd="@+id/Train_button" />

    <Button
        android:id="@+id/Taxi_button"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_marginTop="47dp"
        android:onClick="startTaxis"
        android:text="Taxis"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/Bus_button"
        android:layout_alignLeft="@+id/Bus_button"
        android:layout_alignStart="@+id/Bus_button"
        android:layout_alignRight="@+id/Bus_button"
        android:layout_alignEnd="@+id/Bus_button" />

</RelativeLayout>
